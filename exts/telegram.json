[
  {
    "description": "telegram macro hugging",
    "manipulators": [
      {
        "conditions": [
          {
            "bundle_identifiers": [
              "ru.keepcoder.Telegram"
            ],
            "type": "frontmost_application_if"
          },
          {
            "type": "variable_if",
            "name": "nav_layer",
            "value": 2
          }
        ],
        "from": {
          "key_code": "w",
          "modifiers": {
            "mandatory": [
              "command"
            ]
          }
        },

        "to"  	:[
          {"shell_command":"osascript -e 'set temp to the clipboard \n set the clipboard to \":hugging\" \n tell application \"System Events\" \n   keystroke \"v\" using command down \n   delay 0.1 \n end tell \n set the clipboard to temp'"},

          {
            "key_code": "vk_none",
            "hold_down_milliseconds": 1000
          },
          { "key_code": "right_arrow",
            "hold_down_milliseconds": 50
          },
          {
            "key_code": "vk_none",
            "hold_down_milliseconds": 500
          },

          { "key_code": "return_or_enter" },
          {
            "key_code": "vk_none",
            "hold_down_milliseconds": 500
          },
          { "key_code": "down_arrow" },

          {
            "key_code": "vk_none",
            "hold_down_milliseconds": 500
          },

          { "key_code": "return_or_enter" }
        ],
        "type": "basic"
      }
    ]
  },

